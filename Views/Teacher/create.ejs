<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Student Result</title>
  
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/js/notification.js" defer>
        
    </script>
    <script>
        // Check if viewData is defined before parsing
        <% if (typeof viewData !== 'undefined') { %>
            let viewData = JSON.parse('<%- JSON.stringify(viewData) %>');
        <% }%>
        
    </script>
    <style>
        
        body {
            background-color: #f8f9fa;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            margin-bottom: auto;
        }
        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin-top: -150px;
        }
        .form-container {
            border: 2px solid #34495e;
            background-color: #f5f5f5;
            padding: 40px; 
            border-radius: 15px; 
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.192);
            width: 600px; 
            transition: all 0.3s ease-in-out; 
        }
        .form-container:hover {
            transform: scale(1.05); 
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.3);
        }
        .form-container h1 {
            color: #343a40;
        }
        .form-group {
            margin-bottom: 25px; 
        }
        .form-control {
            border-radius: 10px; 
        }
      
        .btn-primary:hover {
            background-color: #293b4a; 
        }
        .error-message {
        color: red;
        font-size: 14px;
        margin-top: 5px;
        display: inline-block;
    }

    
    .error-message::before {
        content: "âš  ";
        animation: bounce 0.5s infinite alternate;
    }

    @keyframes bounce {
        from {
            transform: translateY(-2px);
        }
        to {
            transform: translateY(2px);
        }
    }
    </style>
</head>
<body>
     <%- include("../partials/teacherSideBar.ejs") %> 
     <div class="container">
        <form action="/teacher/student/create" method="post" class="text-center" id="student-form">
            <div class="form-container">
                <h1 class="mb-4">Add Student Record</h1>
                
                <div class="form-group">
                    <input type="number" class="form-control" placeholder="Roll No." name="rollNo" id="rollNo">
                    <% if(viewData?.errors?.field?.rollNo) { %>
                        <div class="error-message"><%- viewData?.errors?.field?.rolllNo %></div>
                    <% } %>
                </div>
               
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Name" name="name" id="name">
                    <% if(viewData?.errors?.field?.name) { %>
                        <div class="error-message"><%- viewData?.errors?.field?.name %></div>
                    <% } %>
                </div>
                
                <div class="form-group">
                    <input type="date" name="dob" class="form-control" id="dob" required>
                    <% if(viewData?.errors?.field?.dob) { %>
                        <div class="error-message"><%- viewData?.errors?.field?.dob %></div>
                    <% } %>
                </div>
                
                <div class="form-group">
                    <input type="number" name="score" id="score" class="form-control" placeholder="Score">
                    <% if(viewData?.errors?.field?.score) { %>
                        <div class="error-message"><%- viewData?.errors?.field?.score %></div>
                    <% } %>
                </div>
                
                <button type="submit" id="create-student" class="btn" style="background-color: #34495e; color: white;">Add Record</button>
            </div>
        </form>
        
    </div>
</body>
</html>
